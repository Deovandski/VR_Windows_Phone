<phone:PhoneApplicationPage
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UI="clr-namespace:Microsoft.Advertising.Mobile.UI;assembly=Microsoft.Advertising.Mobile.UI"
    x:Class="Vocaloid_Radio.RadioStream"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True" Foreground="{x:Null}" Background="Black">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Black">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel Grid.Row="0" Margin="12,17,0,28"/>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Margin="12,10,12,0" Grid.RowSpan="2">
            <Image HorizontalAlignment="Center" Height="216" Margin="-10,0,-12,10" VerticalAlignment="Bottom" Width="478" Source="/Images/Tileback-3ab589e8-5ad0-401f-9545-af245cb3d9c3.jpg" Stretch="Fill"/>
            <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="0,628,0,0" VerticalAlignment="Bottom" Click="Button_Click_1" Height="120" Width="210" Foreground="White" BorderBrush="White">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="playButton" Content="Play" HorizontalAlignment="Right" Margin="236,628,0,0" VerticalAlignment="Bottom" Click="Button_Click_2" Height="120" Width="210" Background="Black" Foreground="White" BorderBrush="White"/>
            <phone:WebBrowser x:Name="ImageStreamer" HorizontalAlignment="Left" Margin="25.217,185.736,0,0" VerticalAlignment="Top" Height="234.264" Width="417" Source="http://vocaloidradio.com/popup-player.html" IsScriptEnabled="True" Foreground="{x:Null}" FontSize="36" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Tap="ImageStreamer_Tap" MouseWheel="ImageStreamer_MouseWheel" MouseMove="ImageStreamer_MouseMove" KeyDown="ImageStreamer_KeyDown" ManipulationStarted="ImageStreamer_ManipulationStarted" ManipulationDelta="ImageStreamer_ManipulationDelta" ManipulationCompleted="ImageStreamer_ManipulationCompleted" Navigating="ImageStreamer_Navigating">
                <phone:WebBrowser.RenderTransform>
                    <CompositeTransform ScaleX="2" ScaleY="2" SkewX="0.977" TranslateX="2.951"/>
                </phone:WebBrowser.RenderTransform>
            </phone:WebBrowser>
            <TextBlock x:Name="TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="456" Foreground="White" TextAlignment="Center" FontSize="24" RenderTransformOrigin="0.5,0.667" LineHeight="6"/>
            <UI:AdControl x:Name="Ad1" ApplicationId="0bbce01f-6357-4702-b4ab-db02a90d5256" AdUnitId="10336054" HorizontalAlignment="Center" Height="80" Margin="0,-15,0,0" VerticalAlignment="Top" Width="456" ErrorOccurred="Ad1_ErrorOccurred" IsAutoRefreshEnabled="False" IsAutoCollapseEnabled="True" Foreground="{x:Null}" Background="Black"/>
            <Button Name="bt1" Content="Vocaloid Rules!" HorizontalAlignment="Left"  Margin="0,65,0,0" VerticalAlignment="Top" Height="462" Width="446" BorderBrush="{x:Null}" Foreground="{x:Null}" ClickMode="Hover" Background="{x:Null}" GotFocus="bt1_GotFocus" Tap="bt1_Tap" Click="bt1_Click"/>
        </Grid>
    </Grid>

</phone:PhoneApplicationPage>